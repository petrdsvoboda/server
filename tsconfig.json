{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["esnext"],
		"rootDir": "src",
		"outDir": "dist",
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"strict": true
	},
	"exclude": ["node_modules", "dist", "**/__tests__"]
}
